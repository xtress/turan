{#{% extends "::base.html.twig" %}#}

{% block content %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    <link rel="stylesheet" href="{{ asset('bootstrap/css/bootstrap.css') }}" type="text/css" media="all" />
    <script src="{{ asset('bootstrap/js/bootstrap.min.js') }}" type="text/javascript"></script>

    <style type="text/css">
        body {
            padding-top: 40px;
            padding-bottom: 40px;
            background-color: #f5f5f5;
            padding-left: 0px;
        }

        .form-signin {
            max-width: 300px;
            padding: 19px 29px 29px;
            margin: auto auto auto;
            background-color: #fff;
            border: 1px solid #e5e5e5;
            -webkit-border-radius: 5px;
            -moz-border-radius: 5px;
            border-radius: 5px;
            -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            box-shadow: 0 1px 2px rgba(0,0,0,.05);
        }
        .form-signin .form-signin-heading,
        .form-signin .checkbox {
            margin-bottom: 10px;
        }
        .form-signin input[type="text"],
        .form-signin input[type="password"] {
            font-size: 16px;
            height: auto;
            margin-bottom: 15px;
            padding: 7px 9px;
        }

        #remember_me{
            display: inline-block;
        }

    </style>

    <div class="flash-messages">
        {% if error %}
            <div class="alert alert-error">
                <i class="icon-warning-sign"></i>
                <strong>Error!</strong>
                <button type="button" class="close" data-dismiss="alert">×</button>
                {{ error.message }}
            </div>
        {% endif %}
    </div>


    <form class="form-signin" action="{{ path('login_check') }}" method="POST">
        <h2 class="form-signin-heading">Авторизация</h2>
        <label for='_username'>Имя пользователя: </label>
        <input type="text" class="input-block-level" id="username" placeholder="Введите имя пользователя" name="_username" value="{{ last_username }}">
        <label for='_password'>Пароль: </label>
        <input type="password" class="input-block-level" placeholder="Введите пароль" id="password" name="_password" >
        <label for="remember_me">
            <input type="checkbox" id="remember_me" name="_remember_me" checked />
            Запомнить меня
        </label>


        <button class="btn btn-large btn-primary" type="submit">Войти</button>

    </form>
{% endblock content %} 
