{% extends 'AdminMainBundle:Default:index.html.twig' %}

{%block page_title_h1 %}
    <h1 style="display: inline">
        {%trans%}ANB_VACANCIES_DASHBOARD{%endtrans%}
        <a href="{{ path('admin_vacancies_index') }}" class="btn btn-primary">
            {%trans%}ANB_BACK{%endtrans%}
        </a>
    </h1>
{%endblock page_title_h1 %}

{% block container %}
    <br />
    {% if vacanciesList is defined and vacanciesList != null %}
        <table class="table table-bordered table-striped">

            <thead>

                <th>
                    {%trans%}ANB_NEWS_ID{%endtrans%}
                </th>

                {#<th>#}
                    {#{%trans%}ANB_NEWS_CATEGORYNAME{%endtrans%}#}
                {#</th>#}

                <th>
                    {%trans%}ANB_NEWS_TITLE{%endtrans%}
                </th>

                <th>
                    {%trans%}ANB_NEWS_CREATOR{%endtrans%}
                </th>

                <th>
                    {%trans%}ANB_NEWS_CREATEDAT{%endtrans%}
                </th>
                
                <th>
                    {%trans%}ANB_NEWS_MODIFIER{%endtrans%}
                </th>

                <th>
                    {%trans%}ANB_NEWS_MODIFIEDAT{%endtrans%}
                </th>
                <th>
                    {%trans%}ANB_NEWS_LOCALE{%endtrans%}
                </th>

                <th>
                    {%trans%}ANB_NEWS_ACTIONS{%endtrans%}
                </th>

            </thead>

            <tbody>
                {% for vacancy in vacanciesList %}

                    <tr>

                        <td>
                            {{ vacancy.id }}
                        </td>

                        {#<td>#}
                            {#{{ vacancy.newsCategories.name }}#}
                        {#</td>#}

                        <td>
                            {{ vacancy.title }}
                        </td>

                        <td>
                            {{ vacancy.creator.login }}
                        </td>

                        <td>
                            {{ vacancy.createdAt | date('Y-m-d H:i:s') }}
                        </td>

                        <td>
                            {% if vacancy.modifier != null %}
                                {{ vacancy.modifier.login }}
                            {% endif %}
                        </td>

                        <td>

                            {% if vacancy.modifier != null %}
                                {{ vacancy.updatedAt | date('Y-m-d H:i:s') }}
                            {% endif %}
                        </td>
                        <td>
                            {{ vacancy.locale|trans}}

                        </td>

                        <td>
                            <a href="{{ path('admin_vacancies_edit', { 'vacancyID': vacancy.id }) }}" class="btn btn-danger">{%trans%}ANB_NEWS_EDIT{%endtrans%}</a>
                            <a href="{{ path('admin_vacancies_delete', { 'vacancyID': vacancy.id }) }}" class="btn btn-inverse">{%trans%}ANB_NEWS_DELETE{%endtrans%}</a>
                            {#<a href="{{ path('_adminpage_staticpage_preview', { 'id': page.id }) }}" class="btn btn-danger">{%trans%}APB_PAGES_PREVIEW{%endtrans%}</a>#}
                        </td>

                    </tr>

                {% endfor %}
            </tbody>

        </table>
    {% endif %}
    
{% endblock container %}
